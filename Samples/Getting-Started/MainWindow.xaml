<Window x:Class="Getting_Started.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Getting_Started" 
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="CardView - Programmatic Selection" Height="450" Width="400">
    <Grid>
        <syncfusion:CardView Name="cardView">
            <syncfusion:CardViewItem Header="Item 1" >
                <TextBlock Text="Fruits"/>
            </syncfusion:CardViewItem>
            <syncfusion:CardViewItem 
                Header="Item 2"
                IsSelected="True">
                <TextBlock Text="Stationaries"/>
            </syncfusion:CardViewItem>
            <syncfusion:CardViewItem Header="Item 3">
                <TextBlock Text="Dresses"/>
            </syncfusion:CardViewItem>
        </syncfusion:CardView>
    </Grid>
</Window>
